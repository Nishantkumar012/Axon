generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
   id  Int @id @default(autoincrement())
   name String
   email String @unique
   password String
   pages Page[]
}

model Page{
   id Int @id @default(autoincrement())
   title String 
   blocks Block[]
   ownerId Int
   owner User  @relation(fields: [ownerId], references: [id])
   }

 model Block{
   id Int @id @default(autoincrement())
   type String
   content String
   pageId Int 
   page  Page @relation(fields: [pageId], references: [id])
 }    
